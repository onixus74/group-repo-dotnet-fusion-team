    @*@Styles.Render("~/Content/css")*@
    @Styles.Render("~/Scripts/vendor/bootstrap/css/bootstrap.css")
    @Styles.Render("~/Scripts/vendor/font-awesome/css/font-awesome.css")
    @Styles.Render("~/Scripts/vendor/simple-line-icons/css/simple-line-icons.css")
    @Styles.Render("~/Scripts/vendor/owl.carousel/assets/owl.carousel.min.css")
    @Styles.Render("~/Scripts/vendor/owl.carousel/assets/owl.theme.default.min.css")
    @Styles.Render("~/Scripts/vendor/magnific-popup/magnific-popup.css")

    @Styles.Render("~/Content/css/theme.css")
    @Styles.Render("~/Content/css/theme-elements.css")
    @Styles.Render("~/Content/css/theme-blog.css")
    @Styles.Render("~/Content/css/theme-shop.css")
    @Styles.Render("~/Content/css/theme-animate.css")

    @Styles.Render("~/Content/css/skins/default.css")
    @Styles.Render("~/Content/css/custom.css")


    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="body">
