
@{
    ViewBag.Title = "CheckOut";
}

<h2>CheckOut : Purchase your items</h2>

<div>

    @if (ViewBag.Message != null)
    {

        <div class="alert-success"> @ViewBag.Message </div>

    }
    else
    {

        @(Html.BeginForm())
        {

            <h3>With Bank Card</h3>
            <label>Card Number</label><br />
            <input type="text" name="cartenumber" class="form-control" required /><br />
            <label>Cryptogram</label><br />
            <input type="text" class="form-control" style="width: 100px;" required /><br />
            <label>Exp Date</label><br />
            <strong>Month</strong><br />
            <input type="text" placeholder="Mois" class="form-control" required />
            <strong>Year</strong><br />
            <input type="text" placeholder="Année" class="form-control" required />
            <br /><br />

            <h3>With PayPal</h3>
            <label>Paypal mail address</label><br />
            <input type="text" placeholder="Email PayPal" class="form-control" /><br /><br /><br />

            <input type="submit" value="Payer" class="btn-warning" />
        }

    }
</div>



